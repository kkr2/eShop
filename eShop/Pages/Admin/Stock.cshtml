@page
@model eShop.UI.Pages.Admin.StockModel


    <div id="app" class="container">
        <div class="columns">
            <div class="column is-3">
                <table class="table">
                    <tr v-for="product in products" @@click="selectProduct(product)">
                        <td>{{product.description}}</td>
                    </tr>
                </table>
            </div>
            <div class="column is-6" v-if="selectedProduct">
                <table class="table" >
                    <tr v-for="stock in selectedProduct.stock">
                        <td><input class="input" v-model="stock.description" /></td>
                        <td><input class="input" v-model="stock.qty" /></td>
                    </tr>
                </table>
                <a class="button is-warning" @@click="updateStock">
                Update Products
                </a>
            </div>
            <div class="column is-3" v-if="selectedProduct">
                <h2 class="title">New Stock</h2>
                <div class="field">
                    <div class="control">
                        <input class="input" v-model="newStock.description" />
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <input class="input" v-model="newStock.qty" />
                    </div>
                </div>
                <a class="button is-success" @@click="addStock">Add Stock</a>
            </div>
        </div>
    </div>

@section scripts {
<script src="~/js/Admin/stock.js"></script>
}